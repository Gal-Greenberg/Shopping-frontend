<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateUpdateElement">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/user"
            android:textAllCaps="false"
            android:textColor="#03A9F4"
            android:gravity="center"
            android:textSize="30dp"/>

        <ImageButton
            android:id="@+id/user"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/user"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter name"
            android:layout_below="@id/title"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <Spinner
            android:id="@+id/type"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/name"
            android:layout_marginBottom="10dp"
            android:prompt="@string/type_prompt"
            android:entries="@array/create_type_arrays"/>

        <CheckBox
            android:id="@+id/active"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/type"
            android:layout_marginBottom="10dp"
            android:text="  active"/>

        <Spinner
            android:id="@+id/states"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/active"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter the mall city"
            android:layout_below="@id/states"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/streetName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter the mall street"
            android:layout_below="@id/city"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/streetNum"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter the mall street number"
            android:layout_below="@id/streetName"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/mall"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter the mall name"
            android:layout_below="@id/streetNum"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/floor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter the store floor"
            android:layout_below="@id/mall"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter the store category"
            android:layout_below="@id/floor"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/create"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Create"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:background="@drawable/blue_border"
            android:drawableLeft="@drawable/emoji_left"
            android:drawableRight="@drawable/emoji_right"
            android:drawablePadding="5dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>