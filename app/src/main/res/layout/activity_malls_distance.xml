<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MallsDistance">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/shopping_title"/>

        <TextView
            android:id="@+id/distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/title"
            android:layout_above="@id/mallL"
            android:gravity="center"
            android:textColor="#FF5722"
            android:textSize="25dp"/>

        <ImageView
            android:id="@+id/mallL"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_above="@id/car"
            android:scaleType="fitCenter"
            android:src="@drawable/mall_l"/>

        <ImageView
            android:id="@+id/mallR"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_above="@id/car"
            android:scaleType="fitCenter"
            android:src="@drawable/mall_r"/>

        <ImageView
            android:id="@+id/car"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_above="@id/main"
            android:scaleType="fitCenter"
            android:src="@drawable/car"/>

        <Button
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Main"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="40dp"
            android:textAllCaps="false"
            android:background="@drawable/blue_border"
            android:drawableLeft="@drawable/emoji_left"
            android:drawableRight="@drawable/emoji_right"
            android:drawablePadding="5dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>