<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shopping">

    <permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" android:protectionLevel="signature"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/shopping_helper"
        android:label="@string/app_name"
        android:roundIcon="@drawable/shopping_helper"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".UserInfo"></activity>
        <activity android:name=".ResultSearchUpdate" />
        <activity android:name=".ChooseUpdateElementBy" />
        <activity android:name=".CreateUpdateElement" />
        <activity android:name=".MallsDistance" />
        <activity android:name=".ChooseCategory" />
        <activity android:name=".ManagerActivity" />
        <activity android:name=".InfoActivity" />
        <activity android:name=".ResultActivity" />
        <activity android:name=".SignIn" />
        <activity android:name=".SignUp" />
        <activity android:name=".ChooseMall" />
        <activity android:name=".ChooseStores" />
        <activity android:name=".ChooseAction" />
        <activity android:name=".MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>